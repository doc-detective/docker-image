{
  "name": "doc-detective-container-images",
  "version": "3.0.0-dev.0",
  "description": "Treat doc content as testable assertions to validate doc accuracy and product UX.",
  "scripts": {
    "test": "mocha test/*.test.js",
    "build": "PACKAGE_VERSION=$(jq -r .version package.json) && docker build -f ./linux/Dockerfile -t ghcr.io/doc-detective/doc-detective:latest . --build-arg PACKAGE_VERSION=$PACKAGE_VERSION",
    "rebuild": "npm run build -- --no-cache",
    "watch": "nodemon --exec \"npm run rebuild && npm t\" --ext js --ignore dist/",
    "publish": "docker push ghcr.io/doc-detective/doc-detective:latest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/doc-detective/docker-image.git"
  },
  "keywords": [
    "documentation",
    "unit",
    "test",
    "doc",
    "docs"
  ],
  "author": "Manny Silva",
  "license": "AGPL-3.0-only",
  "bugs": {
    "url": "https://github.com/doc-detective/docker-image/issues"
  },
  "homepage": "https://doc-detective.com",
  "devDependencies": {
    "chai": "^5.2.0",
    "mocha": "^11.1.0",
    "nodemon": "^3.1.10"
  }
}
