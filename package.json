{
  "name": "doc-detective-docker-image",
  "version": "0.0.1-alpha.0",
  "description": "Treat doc content as testable assertions to validate doc accuracy and product UX.",
  "scripts": {
    "test": "mocha test/*.test.js",
    "runTests": "docker run -it -v .\\samples:/app hawkeyexl/doc-detective:dev runTests",
    "runCoverage": "docker run -it -v .\\samples:/app hawkeyexl/doc-detective:dev runCoverage",
    "build": "docker build --load -t hawkeyexl/doc-detective:dev .",
    "rebuild": "docker build --no-cache --load -t hawkeyexl/doc-detective:dev .",
    "publish": "docker push hawkeyexl/doc-detective:dev",
    "publish:latest": "docker tag hawkeyexl/doc-detective:dev hawkeyexl/doc-detective:latest && docker push hawkeyexl/doc-detective:latest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/doc-detective/docker-image.git"
  },
  "keywords": [
    "documentation",
    "unit",
    "test",
    "doc",
    "docs"
  ],
  "author": "Manny Silva",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/doc-detective/docker-image/issues"
  },
  "homepage": "https://doc-detective.com",
  "devDependencies": {
    "chai": "^5.1.1",
    "mocha": "^10.7.0"
  }
}
